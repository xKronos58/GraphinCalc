<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gcalc.SettingsControllers.convertController">
   <children>
       <GridPane layoutY="-1.0" prefHeight="400.0" prefWidth="600.0">
           <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
           </columnConstraints>
           <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
           </rowConstraints>
           <ChoiceBox prefWidth="150.0" GridPane.rowIndex="1" GridPane.columnSpan="2" fx:id="Type"/>
           <ChoiceBox prefWidth="150.0" GridPane.rowIndex="2" fx:id="unitOne"/>
           <ChoiceBox prefWidth="150.0" GridPane.rowIndex="3" fx:id="unitTwo"/>

           <TextField prefWidth="150.0" GridPane.rowIndex="1" GridPane.columnIndex="2" fx:id="valueOne" onInputMethodTextChanged="#compute"/>
           <Label prefWidth="150" GridPane.rowIndex="1" GridPane.columnIndex="3" fx:id="output"/>
       </GridPane>
   </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<AnchorPane prefHeight="100.0" prefWidth="100.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gcalc.GCController">
   <children>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="33.0" prefWidth="33.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="33.0" prefWidth="33.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="33.0" prefWidth="33.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="33.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="33.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="33.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
          <Button text="+" prefWidth="Infinity" prefHeight="Infinity" onAction="#addPlus" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
          <Button text="-" prefWidth="Infinity" prefHeight="Infinity" onAction="#addMinus" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
          <Button text="/" prefWidth="Infinity" prefHeight="Infinity" onAction="#addDivide" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
          <Button text="*" prefWidth="Infinity" prefHeight="Infinity" onAction="#addMult" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
          <Button text="(" prefWidth="Infinity" prefHeight="Infinity" onAction="#openBrace" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
          <Button text=")" prefWidth="Infinity" prefHeight="Infinity" onAction="#closeBrace" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
          <Button text="|" prefWidth="Infinity" prefHeight="Infinity" onAction="#addAbsol" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
          <Button text="^" prefWidth="Infinity" prefHeight="Infinity" onAction="#addPower" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
          <Button text="=" prefWidth="Infinity" prefHeight="Infinity" onAction="#addEquals" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
      </GridPane>
   </children>
</AnchorPane>
